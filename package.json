{
  "name": "@yuva1422/telegram.js",
  "version": "1.0.6",
  "description": "A powerful Node.js module that allows you to easily interact with the Telegram Bot API",
  "main": "src/index.js",
  "author": "yuvapoojary",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/yuvapoojary/telegram.js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yuvapoojary/telegram.js"
  },
  "exports": {
    ".": [
      {
        "require": "./src/index.js",
        "import": "./esm/index.mjs"
      },
      "./src/index.js"
    ],
    "./esm": "./esm/index.mjs"
  },
  "scripts": {
    "test": "npm run lint && npm run docs:test",
    "docs": "docgen --source src --custom docs/index.yml --output docs/docs.json",
    "docs:test": "docgen --source src --custom docs/index.yml",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prettier": "prettier --write src/**/*.js",
    "prepublishOnly": "npm run test"
  },
  "homepage": "https://telegram.js.org",
  "keywords": [
    "telegram",
    "telegram.js",
    "bot",
    "api",
    "client"
  ],
  "dependencies": {
    "@discordjs/collection": "^1.1.0",
    "form-data": "^4.0.0",
    "debug": "^4.3.4",
    "jimp": "^0.16.1",
    "node-fetch": "^2.6.7",
    "setimmediate": "^1.0.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-angular": "^17.0.0",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.0",
    "cross-env": "^7.0.3",
    "discord.js-docgen": "git+https://github.com/discordjs/docgen.git",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.2.0",
    "json-filter-loader": "^1.0.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.ts": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "endOfLine": "lf",
    "arrowParens": "avoid"
  }
}
